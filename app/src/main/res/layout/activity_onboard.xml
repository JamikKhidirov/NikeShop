<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/onbord"
    android:orientation="vertical"
    android:background="#48B2E7">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/onbord1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="58dp"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:text="ДОБРО\nПОЖАЛОВАТЬ"
            android:textAlignment="center"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_cros_foreground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="43dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:background="@drawable/backliner"/>

            <LinearLayout
                android:layout_width="28dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:background="@drawable/back2liner" />

            <LinearLayout
                android:layout_width="28dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:background="@drawable/back2liner"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/startBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="100dp"
            android:text="Начать"
            android:textAllCaps="false"
            android:background="@drawable/backbtnstart"
            android:layout_marginBottom="36dp"/>



    </LinearLayout>



</LinearLayout>




