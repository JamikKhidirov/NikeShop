<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragD"
    android:background="#48B2E7"
    tools:context="Onbord2"
    android:orientation="vertical">


    <ImageView
        android:layout_width="375dp"
        android:layout_height="302dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:src="@mipmap/ic_cros_foreground"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="Начнем\nпутешествие"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Умная, великолепная и модная\nколлекция Изучите сейчас"
        android:layout_gravity="center"
        android:textColor="#D8D8D8"
        android:textAlignment="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="28dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:background="@drawable/back2liner"/>

        <LinearLayout
            android:layout_width="43dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:background="@drawable/backliner" />

        <LinearLayout
            android:layout_width="28dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:background="@drawable/back2liner"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:layout_marginHorizontal="20dp"
        android:text="Далее"
        android:textAllCaps="false"
        android:background="@drawable/backbtnstart"/>


</LinearLayout>